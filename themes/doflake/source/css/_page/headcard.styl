.head-card {
    width: 100%;
    height: 100vh;

    .photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .Canvas {
        position: absolute;
        top: 0px;
    }

    .down-button {
        width: 100%;
        height: 64px;
        position: absolute;
        bottom: 20px;
        text-align: center;
    }
}

.head-card:after {
    position: absolute;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    box-shadow: 0 -50px 50px 0 var(--color-body) inset;
}

.card-down-button {
    z-index: 999;
    color: #fff;
    font-size: 24px;
    line-height: 64px;
    position: absolute;
    width: 24px;
    left: calc(50% - 12px);
    text-shadow: 0 1px 2px #000;
    -webkit-animation: scroll-up-down 1.6s linear infinite;
    animation: scroll-up-down 1.6s linear infinite;
}

@keyframes scroll-up-down {
    25% {
        transform: translateY(-6px);
        color: #fff;    
    }
    50%, 100% {
        transform: translateY(0px);    
    }
    75% {
        transform: translateY(8px);
        color: rgb(200, 200, 200);
    }
}
