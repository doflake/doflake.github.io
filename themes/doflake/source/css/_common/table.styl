
.table-wrap {
    overflow-x: scroll;
    margin: 0 0 20px;
}

table {
    display: table;
    width: 100%;
    border-spacing: 0;
    border-collapse: collapse;
    empty-cells: show;

    td,
    th {
        padding: 6px 12px;
        border: 1px solid var(--color-table-border);
        vertical-align: middle;
    }

    thead {
        background: var(--color-table-thead);
    }
}

table tr:nth-child(2n) {
    background-color: var(--color-table-n2);
}