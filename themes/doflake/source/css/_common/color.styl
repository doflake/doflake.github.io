@media (prefers-color-scheme: light) {
    :root{
        --color-body: #EFF0F0;
        --color-body-invert: #121212;
    }  
}

@media (prefers-color-scheme: dark) {
    :root{
        --color-primary-1: #151A30;
        --color-primary-2: #222B45;
        --color-primary-3: #2d365c;
        --color-primary-4: #4B5682;
        --color-primary-5: #586390;
        --color-invert-1: #FDFDFD;
        --color-invert-2: #8F9BB3;
        --color-invert-3: #FAFAFA;
        --color-accent-1: #64a4ee;
        --color-accent-2: #44D7B6;
        --color-accent-3: #681ac2;
        --color-accent-4: #f47466;
    }    
}

:root {
    --color-body: var(--color-primary-1);
    --color-body-invert: var(--color-invert-1);
    --color-hr: var(--color-accent-2);
    --color-h: var(--color-invert-1);
    --color-navbar: var(--color-primary-5);
    --color-blank-1: var(--color-accent-1);
    --color-blank-2: var(--color-accent-2);
    --color-text: var(--color-invert-3);
    --color-post-background: var(--color-primary-2);
    --color-post-author-name: var(--color-invert-1);
    --color-post-signature: var(--color-invert-2);
    --color-post-title: var(--color-invert-1);
    --color-post-titlecut: var(--color-accent-2);
    --color-post-readmore: var(--color-accent-3);
    --color-aside: var(--color-primary-2);
    --color-aside-title: var(--color-invert-1);
    --color-aside-subtitle: var(--color-invert-2);
    --color-aside-social-item-a: var(--color-invert-2);
    --color-footer: var(--color-primary-2);
    --color-code-toolbar: var(--color-primary-4);
    --color-table-border: var(--color-invert-2);
    --color-table-n2: var(--color-primary-3);
    --color-table-thead: var(--color-primary-4);
    --color-footnotes: var(--color-accent-1);
    --color-line-through: var(--color-accent-4);
    --color-decoration: var(--color-accent-4);
}