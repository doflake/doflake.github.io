.footer {
    margin-top: 12vh;
    background-color: rgb(140,140,140,1);

    transition: 0.3s;
}

.footer:hover {
    box-shadow: 0 8px 15px 3px rgba(51,51,51,0.6);  
}

.footer-text {
    padding-top: 0.5vh;
    text-align: center;
    .footer-text {
        font-family: "Comic Sans MS",'Long Cang',cursive;
        font-size: 1.1em;
        color: rgba(255,255,255,1);
    }
}

.footer-copyright {
    margin-top: 1vh;
    text-align: center;
}
