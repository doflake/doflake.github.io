$post_border_radius = convert(hexo-config("layout.index_post.radius"))
.post {
  margin: 1em auto;
  padding: 30px 50px;
  background: rgba(245,245,255,0.85);
  border: 1px solid #ddd;
  box-shadow: 3px 3px 7px #252525;
  border-radius: $post_border_radius;
}

.posts  {
  .post:first-child {
    margin-top: 0;
  }

  .post-title {
    font-size: 1.5em;

    .post-title-link {
      color: #368CCB;
      text-decoration: none;
    }
  }

  .post-content {
    a {
      color: #368CCB;
      text-decoration: none;
    }
  }

  .post-meta {
    color: #BABABA;
  }
}
